# =======================================
# Configuration de l'application
# =======================================
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Africa/Abidjan

# =======================================
# Configuration de la base de données
# =======================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=onelog_voyage_tracker
DB_USERNAME=root
DB_PASSWORD=

# =======================================
# Configuration de l'API
# =======================================
API_PREFIX=api
API_VERSION=v1
API_DEBUG=true

# =======================================
# Configuration JWT (Authentification)
# =======================================
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGO=HS256
JWT_TTL=1440 # en minutes

# =======================================
# Configuration des services externes
# =======================================

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_SMS_FROM=+1xxxxxxxxxx

# Mailer (Email)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="notifications@onelog-africa.com"
MAIL_FROM_NAME="OneLog Africa"

# =======================================
# Configuration Mapbox
# =======================================
VITE_MAPBOX_ACCESS_TOKEN=
VITE_MAPBOX_STYLE=mapbox/streets-v11

# Autres styles disponibles :
# mapbox/streets-v11
# mapbox/outdoors-v11
# mapbox/light-v10
# mapbox/dark-v10
# mapbox/satellite-v9
# mapbox/satellite-streets-v11

# =======================================
# Configuration Supabase (si nécessaire)
# =======================================
VITE_SUPABASE_URL=https://fhiegxnqgjlgpbywujzo.supabase.co
VITE_SUPABASE_ANON_KEY=SUPABASE_CLIENT_ANON_KEY

# =======================================
# Configuration des webhooks
# =======================================
VITE_WEBHOOK_URL=https://your-tunnel-url.loca.lt
TWILIO_WEBHOOK_URL=${VITE_WEBHOOK_URL}/api/webhooks/twilio

# =======================================
# Configuration des logs
# =======================================
LOG_CHANNEL=stack
LOG_LEVEL=debug

# =======================================
# Configuration du cache
# =======================================
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# =======================================
# Configuration des files d'attente
# =======================================
QUEUE_CONNECTION=sync
REDIS_URL=redis://localhost:6379

# =======================================
# Configuration du stockage
# =======================================
FILESYSTEM_DISK=local

# =======================================
# Configuration de débogage
# =======================================
DEBUG_BAR_ENABLED=true
TRUSTED_PROXIES=*
