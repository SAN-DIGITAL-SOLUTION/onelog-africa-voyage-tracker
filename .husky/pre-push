#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Checking for TODO/FIXME in staged files..."

# Get staged files (only .ts, .tsx, .js, .jsx)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx|js|jsx)$' || true)

if [ -n "$STAGED_FILES" ]; then
  # Check for TODO/FIXME in staged files, excluding vendor and test artifacts
  FOUND=$(echo "$STAGED_FILES" | grep -v -E '(vendor/|node_modules/|dist/|build/|playwright-report/|test-results/)' | xargs grep -nE "TODO|FIXME" 2>/dev/null || true)
  
  if [ -n "$FOUND" ]; then
    echo "âŒ Commit bloquÃ©: TODO/FIXME trouvÃ©s dans les fichiers stagÃ©s:"
    echo "$FOUND"
    echo ""
    echo "Veuillez rÃ©soudre ces marqueurs avant de pousser."
    exit 1
  fi
fi

echo "âœ… Aucun TODO/FIXME trouvÃ© dans les fichiers stagÃ©s"

echo "ğŸ”§ Running lint..."
npm run lint || exit 1

echo "ğŸ” Running type-check..."
npm run type-check || exit 1

echo "ğŸ§ª Running unit tests..."
npm run test:unit || exit 1

if [ "$RUN_E2E" = "true" ]; then
  echo "ğŸ­ Running E2E tests..."
  npm run test:e2e || exit 1
fi

echo "âœ… Pre-push checks completed!"
