{
  "name": "control-room-server",
  "version": "1.0.0",
  "description": "Backend pour la salle de contr√¥le transporteurs OneLog Africa",
  "main": "control-room-server.js",
  "scripts": {
    "start": "node control-room-server.js",
    "dev": "nodemon control-room-server.js",
    "simulate": "node position-simulator.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "@supabase/supabase-js": "^2.38.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0",
    "winston": "^3.11.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html", "json"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": ["**/__tests__/**/*.test.js"],
    "setupFilesAfterEnv": ["<rootDir>/__tests__/setup.js"],
    "reporters": ["default", "jest-junit"],
    "verbose": true,
    "testTimeout": 10000
  }
}
