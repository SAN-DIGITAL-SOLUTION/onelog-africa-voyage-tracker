{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Status Schema",
  "type": "object",
  "properties": {
    "project": { "type": "string" },
    "description": { "type": "string" },
    "progression": { "type": "integer", "minimum": 0, "maximum": 100 },
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string", "enum": ["done", "in_progress", "not_started"] },
          "progress": { "type": ["integer", "string"], "minimum": 0, "maximum": 100 },
          "details": { "type": "string" },
          "submodules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "status": { "type": "string", "enum": ["done", "in_progress", "not_started"] },
                "progress": { "type": ["integer", "string"], "minimum": 0, "maximum": 100 },
                "details": { "type": "string" }
              },
              "required": ["name", "status", "details"]
            }
          }
        },
        "required": ["name", "status", "details"]
      }
    },
    "missing_files": {
      "type": "array",
      "items": { "type": "string" }
    },
    "next_steps": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "changelog": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "title": { "type": "string" },
        "details": { "type": "string" }
      },
      "required": ["date", "title", "details"]
    },
    "default": []
  },
  "roadmap": {
    "type": "object",
    "properties": {
      "short": { "type": "array", "items": { "type": "string" } },
      "medium": { "type": "array", "items": { "type": "string" } },
      "long": { "type": "array", "items": { "type": "string" } }
    },
    "required": ["short", "medium", "long"]
  },
  "required": ["project", "progression", "modules", "missing_files", "next_steps", "changelog", "roadmap"]
}
